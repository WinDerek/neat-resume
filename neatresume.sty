% For icons

\usepackage{graphicx}
\usepackage{array}

\newcommand{\icon}[1]{\includegraphics[width=0.5cm,trim={0 0 0 0},clip]{../../figure/icon/#1.png}}

% Reference: https://tex.stackexchange.com/a/230670
\newcommand\cincludegraphics[1]{\raisebox{-0.3\height}{\icon{#1}}}

% Reference: https://tex.stackexchange.com/a/440
\newcommand{\vcenteredicon}[1]{$
    \setlength\tabcolsep{0pt}
    \begin{tabular}{c}
        %        \cincludegraphics{email} % This really centered the image in the table cell, but the icon and the text are not aligned center vertically in the final result
        \icon{#1}
    \end{tabular}
    $}

% Email item
\newcommand{\email}[1]{\vcenteredicon{email} \href{mailto:#1}{\montserrat\fontsize{10}{12}\selectfont #1}}

% Phone item
\newcommand{\phone}[1]{\vcenteredicon{phone} \montserrat\fontsize{10}{12}\selectfont #1}

% GitHub item
\newcommand{\github}[2]{\vcenteredicon{github} \href{#1}{\montserrat\fontsize{10}{12}\selectfont #2}}

